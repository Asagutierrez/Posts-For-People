<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
	<p>Post made by <%= post.owner.name %>...</p>
  <h1><%= post.name %></h1>
</section>
<% if (post.owner.equals(user?.profile._id)) { %>
  <a href="/posts/<%= post._id %>/edit">
    <button class="btn">Edit this Post</button>
  </a>
<% } %>
<form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
  <button class="btn" type="submit">Delete Post</button>
</form>
<form action="/posts/like/<%= post._id %>?_method=PUT" method="POST">
  <button class="btn" type="submit">👍</button>
</form>
<form action="/posts/dislike/<%= post._id %>?_method=PUT" method="POST">
  <button class="btn" type="submit">👎</button>
</form>

<h2>Comments</h2>
<% if (user) { %>
  <h3>Add a comment</h3>
  <form action="/posts/<%= post._id %>/comments" method="POST">
    <textarea name="content"></textarea><br>
    <button type="submit">Add Comment</button>
  </form>
<% } %>
<%- include('../partials/footer') %>