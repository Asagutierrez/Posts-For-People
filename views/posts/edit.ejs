<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/edit.css">
<%- include('../partials/nav') %>

<section>
  <h1>Edit Post</h1>
  <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
    <label>
      Name: 
      <input 
        type="text"
        name="name" 
        value="<%= post.name %>" 
        autocomplete="off"
      >
    </label>
    <button type="submit">Edit Post</button>
  </form>
</section>

